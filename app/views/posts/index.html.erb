<%= form_for @post do |form| %>
	<p>
		<%= form.label :title %>
		<%= form.text_field :title %>
	</p>
	<p>
		<%= form.label :body %>
		<%= form.text_area :body %>
	</p>
	<p>
		<%= form.submit %>
	</p>
<% end %> 


<% if @posts.any? %>
	<% @posts.each do |post| %>
		<h2><%= post.title %></h2>
		<p><%= post.body %></p>
	<% end %>
<% else %>
	<h1>No posts yet</h1>
<% end %>

